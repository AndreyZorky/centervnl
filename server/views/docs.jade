extends layout

block content
  section.about
    .container
      .row.mx-xl-5
        a.col-12.back__subtitle-top.back__subtitle-child(href='/about/') О нас
        .col-12.header__subtitle.title Документы и отчеты
      .row.mx-xl-5.about__wrapper
        p.target__text
          +long-text(text)

        .title-500-32.mt-5 Уставные документы
          .row 
            each doc in docs 
              .col-12.col-md-6.col-lg-4.mt-3 
                .row.d-flex.align-items-center
                  a.doc-icon.d-inline-block(href= doc.file target="_blank")
                  a.news__subtitle.col.ms-2(href= doc.file target="_blank")= doc.name


        .title-500-32.mt-5 Отчёты
          .row 
            each report in reports
              if report.annual
                .col-12.col-md-6.col-lg-4.mt-3  
                  .row.d-flex.align-items-center
                    a.doc-icon.d-inline-block(href= report.annual target="_blank")
                    .col.d-flex.flex-column
                      a.title-700-20.hover-orange.col-12.ms-2(href= report.annual target="_blank") Годовой отчёт
                      a.text-500-16.hover-orange.col-12.ms-2(href= report.justice target="_blank")= report.year

              if report.justice
                .col-12.col-md-6.col-lg-4.mt-3 
                  .row.d-flex.align-items-center
                    a.doc-icon.d-inline-block(href= report.justice target="_blank")
                    .col.d-flex.flex-column
                      a.title-700-20.hover-orange.col-12.ms-2(href= report.justice target="_blank") Отчёт в Минюст
                      a.text-500-16.hover-orange.col-12.ms-2(href= report.justice target="_blank")= report.year

              if report.finance
                .col-12.col-md-6.col-lg-4.mt-3 
                  .row.d-flex.align-items-center
                    a.doc-icon.d-inline-block(href= report.finance target="_blank")
                    .col.d-flex.flex-column
                      a.title-700-20.hover-orange.col-12.ms-2(href= report.finance target="_blank") Отчёт в Минфин
                      a.text-500-16.hover-orange.col-12.ms-2(href= report.justice target="_blank")= report.year