extends layout

block content

  section.about
    .container
      .row.mx-xl-5
        .col-12.back__subtitle-top
          a.back__subtitle-root(href='https://centervnl.ru/about/') О нас
          svg.news__link-image(width='20' height='5' viewBox='0 0 20 5' fill='none' xmlns='http://www.w3.org/2000/svg')
            path.news__link-image(fill-rule='evenodd' clip-rule='evenodd' d='M17.1044 5L19.6044 2.5L17.1044 0V2H0V3H17.1044V5Z' fill='#656973')
          a.back__subtitle-child(href='https://centervnl.ru/wins/') 
            |  Наши победы
        .col-12.header__subtitle.title= win.name

        if win.image
          .col-12.mt-4
            img.review__image(src= win.image alt= win.name)

        .mt-4 
          +long-text(win.description)