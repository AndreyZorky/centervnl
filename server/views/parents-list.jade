extends layout

block content
  section.about
    .container
      .row.mx-xl-5
        .col.about__title.title Родителям
      

      .row.mx-xl-5.about__wrapper
        each page in pages
          .col-12.col-lg-6.mb-4
            a.rectangle-290-123.d-flex.flex-column.justify-content-center.p-4.orange-circle-bg(href="https://centervnl.ru/parents/"+page.path)
              .d-flex.flex-column.justify-content-center
                .title-500-32.z-100= page.name
                .title-500-96.z-100.no-breaks= page.age
                

        .col-12.col-lg-6.mb-4
          a.rectangle-290-123.hover-blue.d-flex.flex-column.justify-content-center.p-4.blue-circle-bg(href="https://centervnl.ru/parents/club/")
            .d-flex.flex-column.justify-content-center
              .title-500-32.z-100 Родительский
              .title-500-96.z-100.no-breaks клуб
